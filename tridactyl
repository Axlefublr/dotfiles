" set hintdelay
set hintchars fjdkslaeiwoghruxcz/vmtyqp
set hintshift true
set modeindicator true
set modeindicatorshowkeys true
set relatedopenpos next
set scrollduration 100
set smoothscroll false
set theme shydactyl
set urlparentignorefragment true

" these do :tab #
unbind --mode=browser <C-6>
unbind --mode=browser <CS-6>

unbind /
unbind ;#
unbind ;K
unbind ;k
unbind ;p
unbind ;y
unbind <C-b>
unbind <C-d>
unbind <C-f>
unbind <C-u>
unbind J
unbind K
unbind s

" hint -h selects an element as if with the mouse

" pick a link to copy
bind sf hint -y
" pick an element to copy the text of
bind sd hint -p
" pick an anchor (heading) to copy the link of
bind s# hint -#
" kill an element (-K lets you restore)
bind K hint -k
bind j scrollline 1
bind k scrollline -1
